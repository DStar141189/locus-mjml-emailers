      }

      .img-right table {
        margin: 0 0 0 auto;
      }

      .m-0 {
        margin: 0 !important;
      }

      .my-12 {
        margin-top: 12px !important;
        margin-bottom: 12px !important;
      }

      .mb-24 {
        margin-bottom: 24px !important;
      }

      .purple-gradient-bg {
        background: rgb(255, 255, 255);
