        <mj-social
          css-class="align-center"
          align="right"
          icon-size="28px"
          mode="horizontal"
        >
          <mj-social-element
            background-color="transparent"
            src="https://info.locus.sh/hubfs/Emailer%20images/invite-mailer/social-icon-x.png"
            name="twitter-noshare"
            href="https://twitter.com/Locus_Sh"
          ></mj-social-element>
          <mj-social-element
            background-color="transparent"
            src="https://info.locus.sh/hubfs/Emailer%20images/invite-mailer/social-icon-instagram.png"
