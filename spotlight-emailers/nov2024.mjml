        <mj-spacer height="20px" />
      </mj-column>
    </mj-section>
    <mj-section
      padding="0 25px"
      css-class="sec-pad"
      background-repeat="no-repeat"
      background-size="cover"
      background-position="center"
      background-url="https://info.locus.sh/hubfs/Emailer%20images/invite-mailer/growth-delivered-bg.png"
    >
      <mj-column width="100%">
        <mj-text
          css-class="mbl-text-center mbl-fs-16 mbl-lh-22"
          color="white"
          font-size="18px"
          font-weight="700"
          line-height="24px"
        >
          Growth, Delivered.
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section background-color="#F9F4F1" padding="25px" css-class="sec-pad">
